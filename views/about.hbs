	<div class="col-md-12">
		<div class="well">
			<div class="row">
				<div class="col-md-12">
					COMMENT[{{@index}}]<br /><br />
				</div>
			</div>
			{{#each replies}}
			<div class="row">
				<div class="col-md-12">
					<div class="well">REPLY[{{@index}}]</div>
				</div>
			</div>
			{{/each}}
			<div class="row">
				<div class="col-md-12">
					<button class="btn btn-primary btn-sm pull-right" data-toggle="collapse" data-target="#reply-
{{_id}}" aria-expanded="false">Reply</button>
				</div>
			</div>
		</div>
		<div class="collapse" id="reply-{{_id}}">
			<div class="well">
				<div class="row">
					<div class="col-md-12">
						REPLY FORM
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{/each}}