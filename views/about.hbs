<div class="row">
	<div class="col-md-12">
		<h3>Leave a Comment</h3>
		<div class="well">
			<div class="row">
				<div class="col-md-12">
					<form method="post" action="/about/addComment">
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorName" name="authorName" type="text" placeholder="Name"/>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorEmail" name="authorEmail" type="email" placeholder="Email"/>
									</div>
								</div>
								<div class="col-md-12">
									<div class="form-group">
										<input class="form-control" id="subject" name="subject" type="text" placeholder="Subject"/>
									</div>
								</div>
								<div class="col-md-12">
									<div class="form-group">
										<input class="form-control" id="commentText" name="commentText" type="textarea" placeholder="Comment" style="height:200px !important; vertical-align: top;"/>
									</div>
								</div>
						<input type="submit" class="btn btn-primary pull-right" value="Comment" /><br /><br /><br />
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

{{#if data}}
<div class="row">
	<div class="col-md-12">
		<h3>All Comments</h3>
		<hr />
	</div>
</div>
{{/if}} {{#each data}}
<div class="row">
	<div class="col-md-12">
		<div class="well">
			{{subject}}
			<div class="row">
				<div class="col-md-12">
					{{commentText}}<br /><br />
					Posted on: {{postedDate}} by <a href="mailto:{{email}}"> {{authorName}} </a>
				</div>
			</div>
			{{#each replies}}
			<div class="row">
				<div class="col-md-12">
					<div class="well">
						{{commentText}}<br /><br />
						Posted on: {{postedDate}} by <a href="mailto:{{email}}"> {{authorName}} </a>
					</div>
				</div>
			</div>
			{{/each}}
			<div class="row">
				<div class="col-md-12">
					<button class="btn btn-primary btn-sm pull-right" data-toggle="collapse" data-target="#reply-{{_id}}" aria-expanded="false">Reply</button>
				</div>
			</div>
		</div>

		<div class="collapse" id="reply-{{_id}}">
			<div class="well">
				<div class="row">
					<div class="col-md-12">
						<form method="post" action="/about/addReply">
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorName" name="authorName" type="text" placeholder="Name"/>
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorEmail" name="authorEmail" type="email" placeholder="Email"/>
									</div>
								</div>
								<div class="col-md-12">
									<div class="form-group">
										<input class="form-control" id="commentText" name="commentText" type="textarea" placeholder="Comment"/>
									</div>
								</div>
								<div class="col-md-0">
									<div class="form-group">
										<input class="form-control" id="comment_id" name="comment_id" type="hidden" value="{{comment_id}}" />
									</div>
								</div>
						<input type="submit" class="btn btn-primary pull-right" value="Reply" /><br /><br /><br />
					</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
{{/each}}