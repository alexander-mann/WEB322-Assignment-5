<div class="row">
    <div class="col-md-12">
        <h1>{{data.firstName}} {{data.last_name}} - Employee: {{data.employeeNum}}</h2>
            <form method="post" action="/employee/update">
                <fieldset>
                    <legend>Personal Information</legend>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstName">First Name:</label>
                                <input class="form-control" id="firstName" name="firstName" type="text" value="{{data.firstName}}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="last_name">Last Name:</label>
                                <input class="form-control" id="last_name" name="last_name" type="text" value="{{data.last_name}}" />
                            </div>
                        </div>
                        <div class="col-md-0">
                            <div class="form-group">
                                <input class="form-control" id="employeeNum" name="employeeNum" type="hidden" value="{{data.employeeNum}}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email:</label>
                                <input class="form-control" id="email" name="email" type="email" value="{{data.email}}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="SSN">Social Security Number:</label>
                                <input class="form-control" id="SSN" name="SSN" type="text" value="{{data.SSN}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressStreet">Address (Street):</label>
                                <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{data.addressStreet}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addresCity">Address (City):</label>
                                <input class="form-control" id="addresCity" name="addresCity" type="text" value="{{data.addresCity}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressState">Address (State):</label>
                                <input class="form-control" id="addressState" name="addressState" type="text" value="{{data.addressState}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressPostal">Address (Zip Code):</label>
                                <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{data.addressPostal}}" />
                            </div>
                        </div>
                    </div>
                    <legend>Company Information</legend>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="isManager">Manager:</label>
                                {{#if data.isManager}}
                                <input class="form-control" id="isManager" name="isManager" type="checkbox" checked />
                                {{else}}
                                <input class="form-control" id="isManager" name="isManager" type="checkbox" />
                                {{/if}}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="employeeManagerNum">Employee's Manager Number:</label>
                                <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text" value="{{data.employeeManagerNum}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="status">Status:</label> <br/>
                                {{#equal data.status "Full Time"}}
                                &nbsp&nbsp&nbsp&nbsp
                                <input class="radio-inline" id="status" name="status" type="radio" value="Full Time" checked>&nbsp&nbspFull Time</input>
                                &nbsp&nbsp&nbsp&nbsp
                                <input class="radio-inline" id="status" name="status" type="radio" value="Part Time">&nbsp&nbspPart Time</input>
                                {{else}}
                                &nbsp&nbsp&nbsp&nbsp
                                <input class="radio-inline" id="status" name="status" type="radio" value="Full Time">&nbsp&nbspFull Time</input>
                                &nbsp&nbsp&nbsp&nbsp
                                <input class="radio-inline" id="status" name="status" type="radio" value="Part Time" checked>&nbsp&nbspPart Time</input>
                                {{/equal}}
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="department">Department</label>
                                <select class="form-control" id="department" name="department">
                                    {{#equal data.department "1"}}
                                    <option selected>1</option>
                                    {{else}}
                                    <option>1</option>
                                    {{/equal}}
                                    {{#equal data.department "2"}}
                                    <option selected>2</option>
                                    {{else}}
                                    <option>2</option>
                                    {{/equal}}
                                    {{#equal data.department "3"}}
                                    <option selected>3</option>
                                    {{else}}
                                    <option>3</option>
                                    {{/equal}}
                                    {{#equal data.department "4"}}
                                    <option selected>4</option>
                                    {{else}}
                                    <option>4</option>
                                    {{/equal}}
                                    {{#equal data.department "5"}}
                                    <option selected>5</option>
                                    {{else}}
                                    <option>5</option>
                                    {{/equal}}
                                    {{#equal data.department "6"}}
                                    <option selected>6</option>
                                    {{else}}
                                    <option>6</option>
                                    {{/equal}}
                                    {{#equal data.department "7"}}
                                    <option selected>7</option>
                                    {{else}}
                                    <option>7</option>
                                    {{/equal}}
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="hireDate">Hire Date</label>
                                <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{data.hireDate}}" readonly />
                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
                <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
            </form>
    </div>
</div>