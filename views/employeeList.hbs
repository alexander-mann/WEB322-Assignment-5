                    <td> <a href="/employees?department={{department}}"> {{department}} </a> </td>
                    <td> {{hireDate}} </td>
                    <td> <a href="/employee/delete/{{employeeNum}}" class="btn btn-danger pull-right" style="margin-top:5px;">remove</a> </td>
