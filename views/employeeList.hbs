                    <th>Full&nbspName</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Manager&nbspID</th>
                    <th>Status</th>
                    <th>Department</th>
                    <th>Hired&nbspOn</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr>
