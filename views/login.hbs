<div class="col-md-12">
    <br/>
    <h1>Login</h1>
    <hr />
</div>
</div>
<div class="col-md-6 col-md-offset-3">
    {{#if errorMessage}}
    <div class="alert alert-danger">
        <strong>Error:</strong> {{errorMessage}}
    </div>
    {{/if}}
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <form method="POST" action="/login">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{#if user}}
                            <input class="form-control" id="username" name="username" type="text" placeholder="User Name" required value="{{user}}" />                            {{else}}
                            <input class="form-control" id="username" name="username" type="text" placeholder="User Name" required value="{{session.user.user}}"
                            /> {{/if}}
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <input class="form-control" id="password" name="password" type="password" placeholder="Password" required />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-danger pull-right">&nbsp;&nbsp;&nbsp;Login&nbsp;&nbsp;&nbsp;</button><br
                        />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br/>